# OpenAI API ключ (обязательно)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub настройки (опционально, если не заданы - статьи сохраняются только в БД)
# Fine-grained Personal Access Token с правами Contents: Read and write
GITHUB_TOKEN=
# Owner репозитория (username или organization)
GITHUB_OWNER=
# Название репозитория
GITHUB_REPO=
# Ветка для коммита (по умолчанию main)
GITHUB_BRANCH=main
# Папка в репозитории где хранить файлы (по умолчанию articles)
GITHUB_FILE_PATH=articles
